{
  "$schema": "https://unpkg.com/release-it@latest/schema/release-it.json",
  "git": {
    "commit": true,
    "commitMessage": "release: v${version}"
  },
  "github": {
    "release": true
  },
  "npm": {
    "publish": false
  },
  "plugins": {
    "./scripts/release-it/xcode.mjs": {}
  },
  "hooks": {
    "after:version": "npm run copy-safari-extension"
  }
}
